<div class="container">
	<div class = "row">
		<div class = "col-md-6 col-md-offset-3">
			<h1>Edit Category "<%= @category.title %>" here</h1>
			<%= form_for @category, url: {action: 'update'} do |f| %>
				<h3><%= f.label :Title %>:</h3>
				<%= f.text_field :title,  value: @category.title %>
				</br></br>

				<h3><%= f.label :Content %>:</h3>
				<%= f.text_area :content, value: @category.content %>
				</br></br>

				<h3><%= f.label :Image %>:</h3>
				<%= f.text_field :image, value: @category.image %>
				</br></br>

				<%= f.submit 'Update Category!', :class => "btn btn-secondary"%>
			<% end %>
		</div>
	</div>
</div>
