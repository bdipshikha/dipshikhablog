		<div class="container">
			<div class = "row">
				<div class = "col-md-6 col-md-offset-3">
					<h1>Edit Post "<%= @post.title %>"</h1>
					<%= form_for @post, url: {action: 'update'} do |f| %>
						<h3><%= f.label :Title %>:</h3>
						<%= f.text_field :title,  value: @post.title %>
						</br></br>

						<h3><%= f.label :Content %>:</h3>
						<%= f.text_area :content, value: @post.content %>
						</br></br>

						<h3><%= f.label :Image %>:</h3>
						<%= f.text_field :image, value: @post.image %>
						</br></br>

						<%= f.submit 'Update Post!', :class => "btn btn-secondary" %>
					<% end %>
				</div>
			</div>
		</div>
